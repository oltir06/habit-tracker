{
    "dashboard": {
        "title": "Habit Tracker API - Overview",
        "tags": [
            "api",
            "production"
        ],
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "Request Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(habit_tracker_http_requests_total[5m])",
                        "legendFormat": "{{method}} {{route}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": 2,
                "title": "Response Time (95th percentile)",
                "type": "graph",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, sum(rate(habit_tracker_http_request_duration_seconds_bucket[5m])) by (le))",
                        "legendFormat": "P95 Response Time"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                }
            },
            {
                "id": 3,
                "title": "Cache Hit Rate",
                "type": "gauge",
                "targets": [
                    {
                        "expr": "habit_tracker_cache_hit_rate"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 6,
                    "x": 0,
                    "y": 8
                }
            },
            {
                "id": 4,
                "title": "Active Users Today",
                "type": "stat",
                "targets": [
                    {
                        "expr": "habit_tracker_checkins_today"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 6,
                    "x": 6,
                    "y": 8
                }
            },
            {
                "id": 5,
                "title": "Total Habits",
                "type": "stat",
                "targets": [
                    {
                        "expr": "habit_tracker_habits_total"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 6,
                    "x": 12,
                    "y": 8
                }
            },
            {
                "id": 6,
                "title": "Total Users",
                "type": "stat",
                "targets": [
                    {
                        "expr": "habit_tracker_users_total"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 6,
                    "x": 18,
                    "y": 8
                }
            }
        ],
        "refresh": "10s",
        "time": {
            "from": "now-1h",
            "to": "now"
        }
    }
}